int getMin(void);
int getSec(void);
int getState(void);
int getTimeParts(void);
void setTimeParts(int hourMinSec);
void setAlarm(int onOff);
void incrementTime(int hourMinSec);
void decrementTime(int hourMinSec);
void initJoystick(void);
void initSwitch2(void);

